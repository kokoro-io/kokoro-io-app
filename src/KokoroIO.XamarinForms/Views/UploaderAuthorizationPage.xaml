<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="KokoroIO.XamarinForms.Views.UploaderAuthorizationPage"
    Title="Authorization">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            <WebView
                x:Name="webView"
                Navigating="WebView_Navigating" />
            <Grid
                Grid.Row="1">
                <Button
                    HorizontalOptions="End"
                    Text="Cancel"
                    Clicked="CancelButton_Clicked" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>