<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:KokoroIO.XamarinForms.ViewModels"
    xmlns:xlabs="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
    x:Class="KokoroIO.XamarinForms.Views.NotificationSettingsPage"
    Title="{Binding Title}">
    <ContentPage.Icon>
        <OnPlatform
            x:TypeArguments="FileImageSource"
            WinPhone="notifications.png"
            iOS="notifications_white.png"
            Android="notifications_white.png" />
    </ContentPage.Icon>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
                <RowDefinition />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            <xlabs:CheckBox
                DefaultText="Play ringtone when a new message posted."
                Checked="{Binding PlayRingtone}" />
            <Grid
                Grid.Row="2">
                <Button
                    HorizontalOptions="End"
                    Text="Back"
                    Command="{x:Static vm:ApplicationViewModel.PopToRootCommand}" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>