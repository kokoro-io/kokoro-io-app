<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:KokoroIO.XamarinForms.Views"
    x:Class="KokoroIO.XamarinForms.Views.MessagesPage"
    Title="{Binding Title}">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            <view:MessageWebView
                LoadOlderCommand="{Binding PrependCommand}"
                RefreshCommand="{Binding RefreshCommand}"
                NavigatingCommand="{Binding OpenUrlCommand}"
                Messages="{Binding Messages}" />
            <StackLayout
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Start">
                <Label
                    Margin="8,4"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"
                    Font="Small Bold Monospace"
                    TextColor="#fff"
                    BackgroundColor="#4169E1"
                    HorizontalTextAlignment="Center"
                    Text="{Binding Room.UnreadCount,StringFormat='{}{0} new messages'}">
                    <Label.Triggers>
                        <DataTrigger
                            TargetType="Label"
                            Binding="{Binding Room.UnreadCount}"
                            Value="0">
                            <Setter
                                Property="IsVisible"
                                Value="False" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Label
                    Margin="8,4"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"
                    Font="Small Bold Monospace"
                    TextColor="#fff"
                    BackgroundColor="DarkOrange"
                    HorizontalTextAlignment="Center"
                    Text="Archived channel" 
                    IsVisible="False">
                    <Label.Triggers>
                        <DataTrigger
                            TargetType="Label"
                            Binding="{Binding Room.IsArchived}"
                            Value="True">
                            <Setter
                                Property="IsVisible"
                                Value="True" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
            </StackLayout>
            <Grid
                Grid.Row="1"
                Margin="4">
                <Grid.Triggers>
                    <DataTrigger
                        TargetType="Grid"
                        Binding="{Binding Room.IsArchived}"
                        Value="True">
                        <Setter
                            Property="IsVisible"
                            Value="False" />
                    </DataTrigger>
                </Grid.Triggers>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition
                        Width="Auto" />
                </Grid.ColumnDefinitions>
                <!--<Button
                    Font="Monospace,Bold,Large"
                    TextColor="#ccc"
                    BackgroundColor="Transparent"
                    Text="+" />-->
                <view:ExpandableEditor
                    Grid.Column="1"
                    FontSize="Small"
                    Text="{Binding NewMessage}" />
                <Button
                    Grid.Column="2"
                    Font="Monospace"
                    FontSize="Small"
                    TextColor="#ccc"
                    BackgroundColor="Transparent"
                    Text="Go"
                    Command="{Binding PostCommand}" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>