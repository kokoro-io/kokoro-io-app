<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:KokoroIO.XamarinForms.Views"
    x:Class="KokoroIO.XamarinForms.Views.MessagesPage"
    Title="{Binding Title}">
    <ContentPage.Content>
        <ListView
            HasUnevenRows="true"
            VerticalOptions="FillAndExpand"
            CachingStrategy="RecycleElement"
            ItemsSource="{Binding Messages}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto" />
                                <ColumnDefinition
                                    Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.RowSpan="2"
                                Source="{Binding Profile.Avatar}" />
                            <StackLayout
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <Label
                                    Text="{Binding Profile.DisplayName}"
                                    LineBreakMode="NoWrap"
                                    FontSize="13.5" />
                                <Label
                                    Text="{Binding PublishedAt}"
                                    LineBreakMode="NoWrap"
                                    FontSize="13.5" />
                            </StackLayout>
                            <view:MessageContent
                                Grid.Column="1"
                                Grid.Row="1"
                                Blocks="{Binding Blocks}" />
                        </Grid>
                        <!---->
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>