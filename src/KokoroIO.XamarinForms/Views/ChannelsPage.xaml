<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:xlabs="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:KokoroIO.XamarinForms.ViewModels"
    x:Class="KokoroIO.XamarinForms.Views.ChannelsPage"
    Title="{Binding Title}">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="32" />
                <RowDefinition
                    Height="Auto" />
                <RowDefinition />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            <Grid
                BackgroundColor="#2C3E50">
                <Image
                    x:Name="LogoImage"
                    Margin="8,4"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Source="kokoroio_white.png" />
            </Grid>

            <Grid
                Grid.Row="1"
                BackgroundColor="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding Application.SettingsCommand}"
                        CommandParameter="{x:Type vm:ProfileSettingsViewModel}" />
                </Grid.GestureRecognizers>

                <Image
                    WidthRequest="40"
                    HeightRequest="40"
                    Margin="8"
                    Source="{Binding Application.LoginUser.DisplayAvatar}" />

                <Label
                    Grid.Column="1"
                    Margin="8"
                    VerticalOptions="Center"
                    Text="{Binding Application.LoginUser.DisplayName}" />

            </Grid>

            <ListView
                Grid.Row="2"
                HasUnevenRows="true"
                VerticalOptions="Fill"
                CachingStrategy="RecycleElement"
                ItemsSource="{Binding Channels}"
                ItemSelected="ListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid
                                Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition
                                        Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.Triggers>
                                    <DataTrigger
                                        TargetType="Grid"
                                        Binding="{Binding IsSelected}"
                                        Value="True">
                                        <Setter
                                            Property="BackgroundColor"
                                            Value="##e9e9e9" />
                                    </DataTrigger>
                                </Grid.Triggers>
                                <Label
                                    Text="{Binding DisplayName}"
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemTextStyle}"
                                    FontSize="16">
                                    <Label.Triggers>
                                        <DataTrigger
                                            TargetType="Label"
                                            Binding="{Binding IsSelected}"
                                            Value="True">
                                            <Setter
                                                Property="TextColor"
                                                Value="#18BC9C" />
                                            <Setter
                                                Property="FontAttributes"
                                                Value="Bold" />
                                            <Setter
                                                Property="BackgroundColor"
                                                Value="##e9e9e9" />
                                        </DataTrigger>
                                        <DataTrigger
                                            TargetType="Label"
                                            Binding="{Binding IsArchived}"
                                            Value="True">
                                            <Setter
                                                Property="TextColor"
                                                Value="#999" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <Label
                                    Grid.Column="1"
                                    Margin="4,0"
                                    Text="{Binding UnreadCount}"
                                    TextColor="#fff"
                                    BackgroundColor="#f66"
                                    Font="Monospace,Bold"
                                    FontSize="Small">
                                    <Label.Triggers>
                                        <DataTrigger
                                            TargetType="Label"
                                            Binding="{Binding UnreadCount}"
                                            Value="0">
                                            <Setter
                                                Property="IsVisible"
                                                Value="False" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout
                Grid.Row="3"
                Orientation="Horizontal"
                HorizontalOptions="End">
                <Button
                    Text="Settings"
                    Command="{Binding Application.SettingsCommand}" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>